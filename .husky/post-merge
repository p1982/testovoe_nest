#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ðŸ”„ Post-merge cleanup..."

# Check if package-lock.json was updated
if git diff --name-only HEAD@{1} HEAD | grep -q "package-lock.json"; then
    echo "ðŸ“¦ Dependencies were updated, running npm install..."
    npm install
fi

# Clean up any temporary files
echo "ðŸ§¹ Cleaning up temporary files..."
npm run clean 2>/dev/null || true

# Run security audit
echo "ðŸ”’ Running security audit..."
npm audit --audit-level=moderate || true

echo "âœ… Post-merge cleanup completed!" 